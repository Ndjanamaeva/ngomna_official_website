{
  "version": 2,
  "builds": [
    {
      "src": "front_end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "installCommand": "npm install",
        "outputDirectory": "front_end/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://2k2bhq6d-5000.use.devtunnels.ms/$1"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "front_end/dist/index.html" }
  ]
}